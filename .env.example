# Пример файла конфигурации
# Скопируйте этот файл в .env и измените значения

# URL webhook из n8n
N8N_UPLOAD_WEBHOOK_URL=https://fondly-assisting-setter.cloudpub.ru/webhook/pinecone-upload
N8N_SEARCH_WEBHOOK_URL=https://fondly-assisting-setter.cloudpub.ru/webhook/pinecone-search

# Настройки по умолчанию
DEFAULT_NAMESPACE=default
DEFAULT_DATA_DIR=./data

# Таймауты (в секундах)
UPLOAD_TIMEOUT=300
SEARCH_TIMEOUT=30

# Настройки чанков для текста
CHUNK_SIZE=600
CHUNK_OVERLAP=100

# Настройки embeddings
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=1024

# Настройки поиска
SEARCH_TOP_K=5
SEARCH_MIN_SCORE=0.0

# Настройки обработки файлов
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_EXTENSIONS=.txt,.md,.csv

# Настройки логирования
ENABLE_VERBOSE_LOGGING=false
LOG_LEVEL=INFO
